{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["(", ")"],
        ["\"", "\""],
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""],
    ],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*REGION",
            "end": "^\\s*//\\s*END_REGION"
        }
    }
}